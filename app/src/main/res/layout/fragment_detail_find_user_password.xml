<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FindUserPasswordPackage.DetailFindUserPasswordFragment">

    <EditText
        android:id="@+id/detailFind_password1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/mainColor"
        android:hint="비밀번호를 입력해주세요"
        android:inputType="textPassword"
        android:maxLength="20"
        android:maxLines="1"
        android:textSize="22dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="#최대 20자까지 설정 가능"
        android:textAlignment="center"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/detailFind_password2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/mainColor"
        android:hint="비밀번호를 다시 입력해주세요"
        android:inputType="textPassword"
        android:maxLength="20"
        android:maxLines="1"
        android:textSize="22dp" />
    <TextView
        android:id="@+id/detailFind_passwordCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#F44336"
        android:textSize="15dp" />
    <Button
        android:id="@+id/detailFind_changePass"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="비밀번호 변경"/>

</LinearLayout>