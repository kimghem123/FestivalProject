<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomePackage.Home_fragment">

    <RelativeLayout
        android:id="@+id/homefragment_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainColor"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="MainTitle"
            android:textColor="#ffffff"
            android:textSize="40dp" />

        <Button
            android:id="@+id/home_User"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="my" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homefragment_linear"
        android:fillViewport="true"
        android:overScrollMode="never">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:padding="10dp"
                android:id="@+id/homeLinear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_weight="1"
                    android:id="@+id/homefragment_A000"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@drawable/menu_button_shape"
                    android:layout_marginRight="5dp"
                    android:text="연극" />

                <Button
                    android:layout_weight="1"
                    android:id="@+id/homefragment_B000"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/menu_button_shape"
                    android:text="음악" />
            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:id="@+id/homeLinear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/homeLinear1">

                <Button
                    android:layout_weight="1"
                    android:id="@+id/homefragment_C000"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/menu_button_shape"
                    android:text="무용" />

                <Button
                    android:layout_weight="1"
                    android:id="@+id/homefragment_D000"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/menu_button_shape"
                    android:text="미술" />
            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:id="@+id/homeLinear3"
                android:layout_below="@id/homeLinear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/homefragment_E000"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/menu_button_shape"
                    android:text="건축" />

                <Button
                    android:id="@+id/homefragment_G000"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/menu_button_shape"
                    android:text="영상" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/homeLinear4"
                android:padding="10dp"
                android:layout_below="@id/homeLinear3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/homefragment_H000"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/menu_button_shape"
                    android:text="문학" />

                <Button
                    android:id="@+id/homefragment_I000"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/menu_button_shape"
                    android:text="문화정책" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/homeLinear5"
                android:layout_below="@id/homeLinear4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <Button
                    android:id="@+id/homefragment_J000"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/menu_button_shape"
                    android:text="축제문화공간" />

                <Button
                    android:id="@+id/homefragment_L000"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/menu_button_shape"
                    android:text="기타" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/homeLinear5" />
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>