<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePackage.Home_fragment"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/homefragment_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainColor"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="MainTitle"
            android:textColor="#ffffff"
            android:textSize="40dp" />

        <Button
            android:id="@+id/home_User"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="my" />

    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/homefragment_linear"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/layout_shape" />
            <Button
                android:id="@+id/homefragment_search"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="search" />

            <Button
                android:id="@+id/homefragment_A000"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_below="@+id/homefragment_search"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/menu_button_shape"
                android:text="연극" />

            <Button
                android:text="음악"
                android:id="@+id/homefragment_B000"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_below="@+id/homefragment_search"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/homefragment_A000"
                android:background="@drawable/menu_button_shape" />

            <Button
                android:text="무용"
                android:id="@+id/homefragment_C000"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_below="@+id/homefragment_A000"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/menu_button_shape" />

            <Button
                android:text="미술"
                android:id="@+id/homefragment_D000"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_below="@+id/homefragment_B000"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/homefragment_A000"
                android:background="@drawable/menu_button_shape" />

            <Button
                android:text="건축"
                android:id="@+id/homefragment_E000"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_below="@+id/homefragment_C000"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/menu_button_shape" />

            <Button
                android:text="영상"
                android:id="@+id/homefragment_G000"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_below="@+id/homefragment_C000"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/homefragment_A000"
                android:background="@drawable/menu_button_shape" />

            <Button
                android:text="문학"
                android:id="@+id/homefragment_H000"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_below="@+id/homefragment_E000"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/menu_button_shape" />

            <Button
                android:text="문화정책"
                android:id="@+id/homefragment_I000"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_below="@+id/homefragment_E000"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/homefragment_A000"
                android:background="@drawable/menu_button_shape" />

            <Button
                android:text="축제문화공간"
                android:id="@+id/homefragment_J000"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_below="@+id/homefragment_H000"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/menu_button_shape" />

            <Button
                android:text="기타"
                android:id="@+id/homefragment_L000"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_below="@+id/homefragment_H000"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/homefragment_A000"
                android:background="@drawable/menu_button_shape" />
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>